<h1>Listing products</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.price %></td>
    <td><%= link_to 'Show', [product.categories, product] %></td>
    <td><%= link_to 'Edit', edit_categories_product_path(product.categories, product) %></td>
    <td><%= link_to 'Destroy', [product.categories, product], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Product', new_categories_product_path(params[:categories_id]) %>
